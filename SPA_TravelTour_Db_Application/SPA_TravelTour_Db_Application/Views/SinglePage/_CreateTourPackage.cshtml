@model TourPackage

<form id="f" name="f" data-db-type="tourPackage" data-db-action="insert" data-controller-action="CreateTourPackage">

    <div class="form-group row mb-1">
        <label asp-for="PackageCategory" class="col-form-label col-2"></label>
        <div class="col-10">
            <select asp-for="PackageCategory" asp-items="Html.GetEnumSelectList<PakageCategory>()"class="form-select">
            <option selected="selected" value="">Please select</option>
        </select>
            <span asp-validation-for="PackageCategory" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="PackageName" class="control-label col-2"></label>
        <div class="col-10">
            <input asp-for="PackageName" class="form-control" />
            <span asp-validation-for="PackageName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="CostPerPerson" class="control-label col-2"></label>
        <div class="col-10">
           <input asp-for="CostPerPerson" class="form-control" />
            <span asp-validation-for="CostPerPerson" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="TourTime" class="control-label col-2"></label>
        <div class="col-10">
            <input asp-for="TourTime" class="form-control" />
            <span asp-validation-for="TourTime" class="text-danger"></span>
        </div>
    </div>
</form>
