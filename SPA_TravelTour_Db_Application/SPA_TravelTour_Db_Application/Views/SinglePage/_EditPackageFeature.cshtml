@model PackageFeature

<form id="f" name="f" data-db-type="packageFeature" data-db-action="edit" data-controller-action="EditPackageFeature">
    <input type="hidden" asp-for="PackageFeatureId" />
    <div class="form-group row mb-1">
        <label asp-for="TransportMode" class="col-form-label col-2"></label>
        <div class="col-10">
            <select asp-for="TransportMode" asp-items="Html.GetEnumSelectList<TransPortMode>()"class="form-select">
            <option selected="selected" value="">Please select</option>
        </select>
            <span asp-validation-for="TransportMode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="HotelBooking" class="control-label col-2"></label>
        <div class="col-10">
            <input asp-for="HotelBooking" class="form-control" />
            <span asp-validation-for="HotelBooking" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Status" class="control-label col-2"></label>
        <div class="col-10">
           <input asp-for="Status" class="form-check" checked />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="TourPackageId" class="control-label col-2"></label>
        <div class="col-10">
            <select asp-for="TourPackageId" class="form-select" asp-items="@(new SelectList(ViewData["TourPackage"] as IEnumerable<TourPackage>, "TourPackageId", "PackageName"))">
                <option value="" selected>Select</option>
            </select>
            <span asp-validation-for="TourPackageId" class="text-danger"></span>
        </div>
    </div>
</form>
